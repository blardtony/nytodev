{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert">
            {{ error.messageKey | trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <form class="auth-form" method="post">
        <div class="form-group">
            <label for="inputEmail">E-mail</label>
            <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <div class="auth-actions">
{#            <div class="form-check">#}
{#                <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">#}
{#                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>#}
{#            </div>#}
{#            <a href="{{ path('auth_password_reset') }}" class="auth-password-forgot">Mot de passe oubli√© ?</a>#}
        </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
{% endblock %}
